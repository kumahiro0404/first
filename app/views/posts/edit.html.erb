<%= form_for @post do |f| %>
    <div class="field">
      <%= f.label :タイトル %>
      <%= f.text_field :title, :size => 40 %>
      <%= f.label :内容 %>
      <%= f.text_field :body, :size => 140 %>
    </div>
    <div class="field">
      <%= f.label :画像 %>
      <%= f.file_field :image %>
    </div>
    <%= f.submit "編集する" %>
  <% end %>
  <%= link_to "投稿一覧に戻る", posts_path %>